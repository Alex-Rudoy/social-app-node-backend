<%- include("includes/header")%>
<div class="container py-md-5 container--narrow">
  <%- include('includes/flash') %> <%- include('includes/profile') %>
  <div class="list-group">
    <% posts.forEach((post) => { %>
    <a href="/post/<%= post._id %>" class="list-group-item list-group-item-action">
      <img class="avatar-tiny" src="<%= post.author.avatar%>" />
      <strong><%= post.title%></strong> on <% if(post.createdDate.getDate() < 10){%>0<%}%><%=
      post.createdDate.getDate()%>.<% if(post.createdDate.getMonth()+1 < 10){%>0<%}%><%=post.createdDate.getMonth()+1
      %>.<%= post.createdDate.getFullYear() %>
    </a>
    <% }) %>
  </div>
</div>
<%- include("includes/footer")%>
